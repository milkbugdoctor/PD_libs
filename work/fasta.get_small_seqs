#!/usr/bin/perl

@ARGV >= 2 || die "\nUsage: $0 max-bases fasta-files ...

";

my $bases = shift;

require 'fasta.pl';

while ((my ($header, $seq) = read_fasta(ARGV)) == 2) {
    my $len = length($seq);
    if (is_qual($seq)) {
	$seq =~ s/^\s+//;
	$len = split /\s+/, $seq;
    }
    next if $len > $bases;
    print "$header\n";
    print_wrapped(STDOUT, $seq);
}

